{
  "name": "json-db-cli-async",
  "description": "Application using a JSON database and a CLI to query and modify it asynchronously",
  "author": "Jonathan Pool",
  "license": "MIT",
  "private": false,
  "version": "0.0.0",
  "dependencies": {
    "cli-table2": ">=0.2.0"
  },
  "devDependencies": {
    "babel-preset-es2015": ">=6.24.1",
    "babel-register": ">=6.24.1",
    "chai": ">=4.0.2",
    "cpr": ">=2.2.0",
    "eslint": "^4.0.0",
    "mocha": ">=3.4.2"
  },
  "scripts": {
    "lint": "eslint task.js src/ src/commands/ test/ doc/commented doc/commented/src/ doc/commented/src/commands/ dev/; exit 0",
    "test": "mocha --compilers js:babel-register test/*.js"
  },
  "bugs": {
    "url": "https://github.com/jrpool/json-db-cli.git/issues"
  },
  "homepage": "https://github.com/jrpool/json-db-cli.git/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrpool/json-db-cli.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-array-constructor": [
        "error"
      ],
      "no-cond-assign": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-control-regex": [
        "off"
      ],
      "no-new-object": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "prefer-const": [
        "warn"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
